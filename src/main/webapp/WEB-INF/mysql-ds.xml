<datasources>
    <datasource jndi-name="java:jboss/mysqlDS" pool-name="mysqlDS" jta="true">
        <connection-url>jdbc:mysql://localhost:3306/collectionbd?useSSL=false</connection-url>
        <driver>com.mysql</driver>
        <!--<driver>org.codehaus.cargo.classpath.mysql</driver>-->
        <pool>
            <min-pool-size>10</min-pool-size>
            <max-pool-size>100</max-pool-size>
            <prefill>true</prefill>
        </pool>
        <security>
            <user-name>CollectionBD</user-name>
            <password>CollectionBD</password>
        </security>
        <statement>
            <prepared-statement-cache-size>32</prepared-statement-cache-size>
            <share-prepared-statements/>
        </statement>
    </datasource>
</datasources>